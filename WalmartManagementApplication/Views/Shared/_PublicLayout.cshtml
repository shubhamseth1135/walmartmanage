    <!-- start-smoth-scrolling -->
    <script type="text/javascript" src="~/js/move-top.js"></script>
    <script type="text/javascript" src="~/js/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
            $("#btnsearch").click(function () {
                var item = $("#itemval").val();
                $.get('@Url.Action("searchfunc","Home")', { itemis: item }, function (data) {
                    window.location.href = "";
                    window.location = '/products/ProductSearch?productname=' + data;
                });
            });
            $("#itemval").autocomplete({
                source : '@Url.Action("getproducts","Home")',
            });
        });
    </script>
    <!-- start-smoth-scrolling -->
</head>

<body>
    <!-- header -->


    <div class="logo_products">
        <div class="container">
            <div class="w3ls_logo_products_left1">
                <ul class="phone_email">
                    <li><i class="fa fa-phone" aria-hidden="true"></i>Need Help? Call Us : 1800-123-898</li>

                </ul>
            </div>
            <div class="w3ls_logo_products_left">
                <h1><a href="index.html">Walmart Managment</a></h1>
            </div>
            <div class="w3l_search">
                <form action="#" method="post">
                    <input type="search" id="itemval" name="Search" placeholder="Search for a Product..." required="">
                    <button type="button" id="btnsearch" class="btn btn-default search" aria-label="Left Align">
                        <i class="fa fa-search" aria-hidden="true"> </i>
                    </button>
                    <div class="clearfix"></div>
                </form>
            </div>

            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- //header -->
    <!-- navigation -->
    <div class="navigation-agileits">
        <div class="container">
            <nav class="navbar navbar-default">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header nav_2">
                    <button type="button" class="navbar-toggle collapsed navbar-toggle1" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
                    <ul class="nav navbar-nav">
                        <li class="active">@Html.ActionLink("Home", "PublicHome", "products")</li>
                        <!-- Mega Menu -->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login<b class="caret"></b></a>
                            <ul class="dropdown-menu multi-column columns-3">
                                <div class="row">
                                    <div class="multi-gd-img">
                                        <ul class="multi-column-dropdown">
                                            <h6>Select Login</h6>
                                            <li> @Html.ActionLink("Admin Login", "AdminLogin", "Administrators")</li>
                                            <li>@Html.ActionLink("Store Login", "storelogin", "stores")</li>
                                            <li>@Html.ActionLink("Employee Login", "Employeelogin", "storeemployees")</li>
                                        </ul>
                                    </div>
                                </div>
                            </ul>
                        </li>
                        <li class="active">@Html.ActionLink("View Bill", "viewbills", "memberships")</li>
                        <li class="active">@Html.ActionLink("About Us", "About", "Home")</li>
                        <li class="active">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        <li class="active">@Html.ActionLink("Feedback", "feedback", "Home")</li>
                        @{
                            
                            WalmartContext db = new WalmartContext();
                            var categories = db.categories.Take(3).ToList();
                            foreach (var category in categories)
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@category.categoryname<b class="caret"></b></a>
                                    <ul class="dropdown-menu multi-column columns-3">
                                        <div class="row">
                                            <div class="multi-gd-img">
                                                <ul class="multi-column-dropdown">
                                                    <h6>@category.categoryname</h6>
                                                    @{
                                                        var subcategories = @db.subcategories.Where(x => x.categoryid == category.id).ToList();
                                                    }
                                                    @foreach (var subcat in subcategories)
                                                    {
                                                        <text>
                                                            <li><a href="/products/PublicHome?subcatname=@subcat.subcategoryname">@subcat.subcategoryname</a></li>
                                                        </text>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </ul>
                                </li>
                             }
                        }
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Others<b class="caret"></b></a>
                            <ul class="dropdown-menu multi-column columns-3">
                                <div class="row">
                                    <div class="multi-gd-img">
                                        <ul class="multi-column-dropdown">
                                            <h6>Others</h6>
                                            @{
                                                var totalcount = db.categories.Count() - 3;
                                                var remaining = db.categories.OrderByDescending(x => x.id).Take(totalcount);
                                            }
                                            @foreach (var category in remaining)
                                            {

                                                var subcats = db.subcategories.Where(x => x.categoryid == category.id).ToList();

                                                foreach (var cat in subcats)
                                                {
                                                    <text>
                                                        <li><a href="/products/PublicHome?subcatname=@cat.subcategoryname">@cat.subcategoryname</a></li>
                                                    </text>
                                                }
                                            }
                                        </ul>
                                    </div>

                                </div>
                            </ul>
                        </li>

                        


                        @*<li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admins<b class="caret"></b></a>
                                <ul class="dropdown-menu multi-column columns-3">
                                    <div class="row">
                                        <div class="multi-gd-img">
                                            <ul class="multi-column-dropdown">
                                                <h6>Manage Admins</h6>
                                                <li>@Html.ActionLink("Add Admin", "Create", "Administrator")</li>
                                                <li> @Html.ActionLink("View Admin", "Index", "Administrator")</li>
                                            </ul>
                                        </div>

                                    </div>
                                </ul>
                            </li>*@


                    </ul>
                </div>
            </nav>
        </div>
    </div>
