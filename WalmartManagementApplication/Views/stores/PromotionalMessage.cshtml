
@{
    ViewBag.Title = "PromotionalMessage";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<h2>Promotional Message</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        
        <div class="form-group">
            @Html.Label("Message", new { @class = "control-label col-md-2" })
            
            <div class="col-md-10">
            @Html.TextArea("Message", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deliver Message" class="btn btn-success" />
            </div>
        </div>
        </div>
}