@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

@{
    ViewBag.Title = "Store Login";
}

<h2>Store Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Store Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("Store ID")
            </div>
            <div class="col-md-10">
                @Html.Editor("storeid", new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Storeid" ,@type="number"} })
                @Html.ValidationMessage("storeid", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("Password")
            </div>
            <div class="col-md-10">
                @Html.Editor("password", new { htmlAttributes = new { @class = "form-control", @type = "password", placeholder = "Enter Password" } })
                @Html.ValidationMessage("password", new { @class = "text-danger" })
            </div>
        </div>

        <input type="submit" value="Login" class="btn btn-success btn-block" />
    </div>

}
